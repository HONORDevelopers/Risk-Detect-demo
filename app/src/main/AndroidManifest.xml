<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MainAcitivity"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.MainAcitivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DeviceHealthDetectActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".TouchDetectActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".RiskAppDetectActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".FraudDetectActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".AppIdentityActivity"
            android:exported="true">
        </activity>

        <meta-data
            android:name="com.hihonor.mcs.client.appid"
            android:value="104452002" />
    </application>

    <uses-permission android:name="com.hihonor.security.permission.ACCESS_THREAT_DETECTION" />

</manifest>