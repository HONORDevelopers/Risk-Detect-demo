<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_risk_app_detect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="16dp"
        android:text="前序欺诈" />

    <Button
        android:id="@+id/btn_fraud_detect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/btn_risk_app_detect"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="16dp"
        android:text="反诈检测" />

    <Button
        android:id="@+id/btn_device_health_detect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_risk_app_detect"
        android:layout_margin="16dp"
        android:text="设备健康" />

    <Button
        android:id="@+id/btn_touch_detect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/btn_device_health_detect"
        app:layout_constraintTop_toBottomOf="@id/btn_risk_app_detect"
        android:layout_margin="16dp"
        android:text="模拟触屏" />

    <Button
        android:id="@+id/btn_app_identity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/btn_touch_detect"
        app:layout_constraintTop_toBottomOf="@id/btn_risk_app_detect"
        android:layout_margin="16dp"
        android:text="应用身份证明" />

</androidx.constraintlayout.widget.ConstraintLayout>